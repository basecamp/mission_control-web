<%= form_with(model: route) do |form| %>
  <%= render partial: "form_errors", locals: { model: route } %>

  <div class="field">
    <%= form.label_default :mission_control_web_application_id, "Application" %>
    <%= form.select :mission_control_web_application_id, MissionControl::Web::Application.all.map { |app| [ app.name, app.id ] } %>
  </div>

  <div class="field">
    <%= form.label_default :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label_default :pattern %>
    <%= form.text_field :pattern %>
  </div>

  <div class="field">
    <%= form.label_check_box :enabled, "Traffic allowed" %>
    <%= form.check_box :enabled %>
  </div>

  <div class="field is-grouped">
    <%= form.submit_primary %>

    <%= form.div_control do %>
      <%= link_to "Cancel", routes_path, class: "button is-link is-light"  %>
    <% end %>
  </div>
<% end %>
